    <Grid Margin="20,20,20,20" Padding="30,30,30,30" BackgroundColor="Black" 
          RowSpacing="5" ColumnSpacing="5">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Text="Column 0, Row 0" />
        <Label Grid.Row="0" Grid.Column="1" Text="Column 1, Row 0" />
        <Label Grid.Row="1" Grid.Column="0" Text="Column 0, Row 1" />
        <Label Grid.Row="1" Grid.Column="1" Text="Column 1, Row 1" />
        <Label Grid.ColumnSpan="2" Grid.Row="2" Text="Xamarin.Forms ColumnSpan2"/>
        <Label Grid.ColumnSpan="2" Grid.Row="3" Text="Xamarin.Forms RowSpan2"/>
    </Grid>

</ContentPage>
